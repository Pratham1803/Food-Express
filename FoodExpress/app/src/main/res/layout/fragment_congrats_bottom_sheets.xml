<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CongratsBottomSheets">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/yeonsung_regular"
            android:text="Congrats \nYour Order Placed"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textSize="34sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yeonsung_regular"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:text="Your Order Will Get In 10 To 15 Minutes"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:src="@drawable/congratulation" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/goHome"
            android:layout_width="157dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/yeonsung_regular"
            android:background="@drawable/gohomeshape"
            android:text="Go Home"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <!--        <View-->
<!--             android:layout_width="match_parent"-->
<!--             android:layout_height="wrap_content"/>-->
    </LinearLayout>

</FrameLayout>